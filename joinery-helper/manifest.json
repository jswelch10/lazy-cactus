{
  "manifest_version": 3,
  "name": "JoineryHelper",
  "description": "",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "action": {
    "default_title": "JoineryHelper"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://www.framebridge.com/*"],
      "css": ["styles.css"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["index.html", "styles.css", "JoineryHelper.js"],
      "matches": ["https://www.framebridge.com/*"]
    }
  ],

  "permissions": [
    "storage", "scripting", "activeTab"
  ],

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Y",
        "mac": "Command+Y"
      }
    }
  }
}